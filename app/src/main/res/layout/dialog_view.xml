<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/global_bg_dialog">

		<EditText
			android:id="@+id/dialog_view_username"
			android:inputType="textEmailAddress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/global_metric_medium"
			android:layout_marginLeft="@dimen/global_metric_micro"
			android:layout_marginRight="@dimen/global_metric_micro"
			android:layout_marginBottom="@dimen/global_metric_micro"
			android:hint="username" />

		<EditText
			android:id="@+id/dialog_view_password"
			android:inputType="textPassword"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/global_metric_micro"
			android:layout_marginLeft="@dimen/global_metric_micro"
			android:layout_marginRight="@dimen/global_metric_micro"
			android:layout_marginBottom="@dimen/global_metric_medium"
			android:hint="password" />

	</LinearLayout>
</ScrollView>
