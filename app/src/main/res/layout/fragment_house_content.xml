<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/fragment_house_floorplan_image_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:src="@drawable/house_floorplan"
		/>

	<RelativeLayout
		android:id="@+id/fragment_house_floorplan_overlay"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_alignTop="@id/fragment_house_floorplan_image_view"
		android:layout_alignBottom="@id/fragment_house_floorplan_image_view"
		android:background="@android:color/transparent"/>


</RelativeLayout>
