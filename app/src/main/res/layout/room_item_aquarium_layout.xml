<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_margin="10dp"
		android:background="#99000000"
		android:orientation="horizontal"
		android:paddingLeft="10dp">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Top light"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<Switch
				android:id="@+id/room_item_aquarium_top_light_switch"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:text="Side light"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<Switch
				android:id="@+id/room_item_aquarium_side_light_switch"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false" />

		</LinearLayout>

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		<NumberPicker
			android:id="@+id/room_item_aquarium_number_picker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		<RelativeLayout
			android:layout_width="120dp"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/room_item_aquarium_image_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:src="@drawable/aquarium_black" />

			<TextView
				android:id="@+id/room_item_aquarium_temperature_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="5dp"
				android:text="10"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

			</RelativeLayout>
	</LinearLayout>

</RelativeLayout>