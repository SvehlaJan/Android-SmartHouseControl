<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_margin="10dp"
		android:background="#99000000"
		android:gravity="center"
		android:orientation="horizontal"
		android:paddingLeft="10dp">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="Actual\ntemperature"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<TextView
				android:id="@+id/room_item_heating_actual_temp_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

			<TextView
				android:id="@+id/room_item_heating_actual_state_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:text="Heating"
				android:textAppearance="?android:attr/textAppearanceSmall" />
		</LinearLayout>

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		<NumberPicker
			android:id="@+id/room_item_heating_number_picker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:clickable="false" />

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>


		<ImageView
			android:layout_width="90dp"
			android:layout_height="match_parent"
			android:padding="5dp"
			android:scaleType="fitXY"
			android:src="@drawable/rad_3"/>
	</LinearLayout>

</RelativeLayout>